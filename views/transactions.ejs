<%- include('./partials/header') %>
    <%- include('./partials/navbar') %>
        <div class="container-fluid mt-5">
            <div class="display-4 text-center text-success font-weight-bolder mt-5 mb-3">
                <u>All Transactions</u>
            </div>
            <table class="table table-striped table-hover text-center w-75 m-auto border border-success">
                <thead class="bg bg-success text-light">
                    <tr>
                        <th scope="col">Transaction ID</th>
                        <th scope="col">Customer Name</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Data</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% transactions.forEach(transaction=> { %>
                        <tr>
                            <th scope="row">
                                <%= transaction.id %>
                            </th>
                            <td>
                                <%= transaction.member %>
                            </td>
                            <td>
                                <%= transaction.amount %>
                            </td>
                            <td>
                                <%= transaction.date.getDate() %>/<%=transaction.date.getMonth()+1%>/<%=transaction.date.getFullYear()%>
                            </td>
                            <td>
                                <a href="/deleteTransaction/<%=transaction.id%>" class="text-white"
                                    style="text-decoration: none;">
                                    <div class="btn btn-danger d-flex justify-content-around align-items-center w-100">
                                        <div class="text-light">Delete</div>
                                        <i class="fas fa-rupee-sign"></i>
                                    </div>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <%- include('./partials/footer') %>