<form action="/donateSuccess" method="POST">
    <input style="display: none;" type="text" name="name" id="name" value="<%=name%>">
    <input style="display: none;" type="email" name="email" id="email" value="<%=email%>">
    <input style="display: none;" type="number" name="amount" id="amount" value="<%=amount%>">
    <script src="https://checkout.razorpay.com/v1/checkout.js" data-key="<%= API_KEY %>" // Enter the Test API
        Key ID generated from Dashboard → Settings → API Keys data-amount="<%= amount*100 %>" // Amount is in currency subunits.
        Hence, 29935 refers to 29935 paise or ₹299.35. data-currency="INR" // You can accept international payments by
        changing the currency code. Contact our Support Team to enable International for your account data_id="35343254"
        // Replace with the order_id generated by you in the backend. data-buttontext="Pay with Razorpay"
        data-name="<%= name %>"
        data-description="A Wild Sheep Chase is the third novel by Japanese author Haruki Murakami"
        data-image="https://cdn-icons.flaticon.com/png/512/3177/premium/3177440.png?token=exp=1644645562~hmac=00407d8119fd0d58f2ae3eb6ce3fcee2" data-prefill.name="Gaurav Kumar"
        data-prefill.email="<%= email %>" data-theme.color="#1E90FF"></script>
    <input type="hidden" custom="Hidden Element" name="hidden">
</form>
<script>
    document.getElementsByClassName('razorpay-payment-button')[0].style.display = "none";
    document.getElementsByClassName('razorpay-payment-button')[0].click();
</script>