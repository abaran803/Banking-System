<%- include('./partials/header') %>
    <%- include('./partials/navbar') %>
        <div class="container-fluid mt-5">
            <div class="display-4 text-center text-info font-weight-bolder mt-5 mb-3">
                <u>All Customers</u>
            </div>
            <table class="table table-striped table-hover text-center w-75 m-auto border border-success">
                <thead class="bg bg-info text-light">
                    <tr>
                        <th scope="col">Customer ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Mail_ID</th>
                        <th scope="col">Total Balance</th>
                        <th scope="col">Transaction</th>
                    </tr>
                </thead>
                <tbody>
                    <% customers.forEach(customer=> { %>
                        <form action="/payment" method="post">
                            <input type="text" name="id" id="id" style="display: none;" value=<%=customer.id %>>
                            <input type="text" name="name" id="name" style="display: none;" value=<%=customer.name %>>
                            <input type="text" name="email" id="email" style="display: none;" value=<%=customer.email %>>
                            <tr>
                                <th scope="row"><%= customer.id %>
                                </th>
                                <td>
                                    <%= customer.name %>
                                </td>
                                <td>
                                    <%= customer.email %>
                                </td>
                                <td>
                                    <%= customer.totalBalance %>
                                </td>
                                <td>
                                    <button
                                        class="btn btn-success d-flex justify-content-around align-items-center w-100"
                                        style="border: none;">
                                        <div class="text-light" id="transfer" type="submit">Transfer</div>
                                        <i class="fas fa-rupee-sign"></i>
                                    </button>
                                </td>
                            </tr>
                        </form>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <%- include('./partials/footer') %>