    <tr>
        <td>To</td>
        <td>
            <%= customerB.name %>
        </td>
    </tr>
    <tr>
        <td>Email_ID</td>
        <td>
            <%= customerB.email %>
        </td>
    </tr>
    <tr>
        <td>Amount Added</td>
        <td>
            <%= amount %>
        </td>
    </tr>
    <tr>
        <td>Balance Left</td>
        <td>
            <%= customerB.totalBalance %>
        </td>
    </tr>
</table>